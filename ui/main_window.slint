import {Button, ListView, GridBox, HorizontalBox, VerticalBox} from "std-widgets.slint";

export struct GameItem :=
{
    name: string,
    path: string,
}

export global GameListData :=
{
    property<string> path;
    property<[GameItem]> list-of-roms: [{name: "snake.gb", path: "./snake.gb"}];
    callback button-pressed(string);
    callback select-directory();
    callback refresh-directory();
}

RomListItem := Rectangle
{
    property<string> rom-name;
    property<string> rom-path;

    zone := TouchArea
    {
        HorizontalBox
        {
            padding-top: 5px;
            padding-bottom: 5px;
            alignment: space-between;
            Text
            {
                text: rom-name;
                font-size: 14px;
                vertical-alignment: center;
                overflow: TextOverflow.elide;
            }
            Button
            {
                text: "Run";
                font-size: 14px;
                clicked => { GameListData.button-pressed(rom-path); }
            }
        }
    }

    states
    [
        hovered when zone.has-hover :
        {
            background: #77777730;
        }
    ]

    animate background
    {
        duration: 100ms;
        easing: ease-in-out;
    }
}

export GameList := VerticalBox
{
    VerticalLayout
    {
        HorizontalBox
        {
            horizontal-stretch: 1;
            alignment: space-between;
            padding-top: 0px;
            padding-bottom: 0px;
            Text
            {
                vertical-stretch: 1;
                text: "Current Directory: " + GameListData.path;
                vertical-alignment: center;
                wrap: TextWrap.word-wrap;
            }
            VerticalLayout
            {
                alignment: center;
                Button
                {
                    text: "Choose...";
                    clicked => { GameListData.select-directory(); }
                }
            }
        }
        HorizontalBox
        {
            padding-top: 0px;
            padding-bottom: 0px;
            alignment: end;
            VerticalLayout
            {
                padding-top: 5px;
                alignment: center;
                Button
                {
                    text: "Refresh";
                    clicked => { GameListData.refresh-directory(); }
                }
            }
        }
    }
    ListView
    {
        for rom-item in GameListData.list-of-roms: VerticalLayout
        {
            RomListItem
            {
                rom-name: rom-item.name;
                rom-path: rom-item.path;
            }
        }
    }
}

export MainWindow := Window
{
    title: "Game Boy Inator";
    preferred-width: 500px;
    preferred-height: 500px;
    min-width: 250px;
    min-height: 250px;
    GameList{}
}
